@model List<ArticleListVm>






<section class="container ">

    <ul class=" d-flex flex-wrap justify-content-center list-group list-group-horizontal">

        @foreach (var item in Model)
        {
            <li class="list-group-item ">

                <div class="card text-dark bg-warning mb-3" style="width: 18rem;">


                    <div class="card-body">
                        <a asp-controller="Home" asp-action="ArticleDetail" asp-route-id="@item.Id"><img src="@item.ImagePath" class="card-img-top" alt="..." width="100" height="200"></a>
                        <p class="card-title">@item.Title</p>
                        <p class="card-text">@item.Content </p>
                        <p class="card-text">@item.CreatedDate </p>
                        <p class="card-text">@item.UserName </p>
                    </div>
                </div>


            </li>
        }


    </ul>



</section>