@model LoginVm
@{
    Layout = "_Layout";
}
<!doctype html>
<html lang="en">
<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="register2/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MyBlog Giriş Ekranı</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoş geldiniz!</h3>
                        <p class="text-center">Bilgilerinizi Doldurarak Giriş Yapabilirsiniz.</p>
                        <form method="post" class="login-form">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" asp-for="Password" class=" form-control" placeholder="Şifre" required>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <br /> <br />
                            <div class="form-group d-md-flex">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="w-100 text-center mt-4 text">
                            <p class="mb-0">Hesabınız Yok Mu?</p>
                            <a asp-controller="Register" asp-action="UserRegister">Kayıt Ol!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="register2/js/jquery.min.js"></script>
    <script src="register2/js/popper.js"></script>
    <script src="register2/js/bootstrap.min.js"></script>
    <script src="register2/js/main.js"></script>

</body>
</html>