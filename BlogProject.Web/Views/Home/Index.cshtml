@model List<ArticleListVm>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="./assets/img/favicon.ico">
    <link rel="icon" type="image/png" href="./assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Source+Sans+Pro:400,600,700" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!-- Main CSS -->
    <link href="./assets/css/main.css" rel="stylesheet" />
</head>

<!--------------------------------------
HEADER
--------------------------------------->
<div class="container">
    <div class="jumbotron jumbotron-fluid mb-3 pt-0 pb-0 bg-warning position-relative">
        <div class="pl-4 pr-0 h-100 tofront">
            <div class="row justify-content-between">
                <div class="col-md-6 pt-6 pb-6 align-self-center">
                    <h1 class="secondfont mb-3 font-weight-bold">   Herkesin Anlatacak Bir Hikayesi Vardır.Biz de Onlardan Biriyiz. </h1>
                    <p class="mb-3">
                        MyBlog insan hikayeleri ve fikirleri için bir yuvadır.Burada herkes anlayışlarını, bakış açılarını, faydalı bilgileri
                        ve tecrübelerini dünyayla paylaşabilir.
                    </p>
                    <a asp-controller="Home" asp-action="About" class="btn btn-dark">Daha Fazla</a>
                </div>
                <div class="col-md-6 d-none d-md-block pr-0" style="background-size:cover;"><figure><img src="homepage/assets/img/demo/home.jpg" alt="sing up image"></figure>	</div>
            </div>
        </div>
    </div>
</div>
<!-- End Header -->
<!--------------------------------------
MAIN
--------------------------------------->

<div class="container pt-4 pb-4">
    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 mb-4 box-shadow h-xl-300">
                <div class="card-body px-0 pb-0 d-flex flex-column align-items-start">

                    @foreach (var item in Model)
                    {
                        <h2 class="h4 font-weight-bold">

                            <a class="text-dark" asp-controller="Home" asp-action="ArticleDetail" asp-route-id="@item.Id"><img src="@item.ImagePath" class="card-img-top" alt="..." widht="1000" height="200"></a>
                        </h2>
                        <p class="card-text">
                            @item.Content.Substring(item.Content.Length-300)

                        </p>
                        <a class="btn btn-info col-3" height="20" asp-controller="Home" asp-action="ArticleDetail" asp-route-id="@item.Id">Daha Fazla</a>
                        <div>
                            <small class="d-block"><a class="text-muted" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="@item.UserId">@item.UserName</a></small>
                            <small class="text-muted">@item.CreatedDate</small>
                        </div>
                    }


                </div>
            </div>
        </div>
        <div class="col-lg-6" style="padding-left:240px">
            <div class="flex-md-row mb-4 box-shadow h-xl-300">
                <h2>İlginizi Çekecek Başlıklar</h2>
                <div class="mb-3 d-flex align-items-center">

                    
                    <div class="pl-3">
                        <img height="80" src="/images/category/istatistik.png">
                        <h2 class="mb-2 h6 font-weight-bold">
                            <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="1">İstatistik</a>
                        </h2>

                        <small class="text-muted">@DateTime.Now</small>
                        <br /><br />
                        <div class="pl-3">
                            <img height="80" src="/images/category/teknoloji.jpg">
                            <h2 class="mb-2 h6 font-weight-bold">
                                <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="2">Teknoloji</a>
                            </h2>
                            <small class="text-muted">@DateTime.Now</small>
                        </div>
                        <br /><br />
                        <div class="pl-3">
                            <img height="80" src="/images/category/hukuk.jpg">
                            <h2 class="mb-2 h6 font-weight-bold">
                                <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="3">Hukuk</a>
                            </h2>
                            <small class="text-muted">@DateTime.Now</small>
                        </div>
                        <br /><br />
                        <div class="pl-3">
                            <img height="80" src="/images/category/felsefe.jpg">
                            <h2 class="mb-2 h6 font-weight-bold">
                                <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="4">Felsefe</a>
                            </h2>
                            <small class="text-muted">@DateTime.Now</small>
                        </div>
                        <br /><br />
                        <div class="pl-3">
                            <img height="80" src="/images/category/sporr.jpg">
                            <h2 class="mb-2 h6 font-weight-bold">
                                <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="5">Spor</a>
                            </h2>
                            <small class="text-muted">@DateTime.Now</small>
                        </div>
                        <br /><br />
                        <div class="pl-3">
                            <img height="80" src="/images/category/psikoloji.jpg">
                            <h2 class="mb-2 h6 font-weight-bold">
                                <a class="text-dark" asp-controller="Category" asp-action="CategoryDetail" asp-route-id="6">Psikoloji</a>
                            </h2>
                            <small class="text-muted">@DateTime.Now</small>
                        </div>

                    </div>
                    
                    



                </div>

            </div>
        </div>
    </div>
</div>

<!--------------------------------------
JAVASCRIPTS
--------------------------------------->
<script src="./assets/js/vendor/jquery.min.js" type="text/javascript"></script>
<script src="./assets/js/vendor/popper.min.js" type="text/javascript"></script>
<script src="./assets/js/vendor/bootstrap.min.js" type="text/javascript"></script>
<script src="./assets/js/functions.js" type="text/javascript"></script>

</html>


